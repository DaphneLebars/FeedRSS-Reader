<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tv_abonner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_entrez_url"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#FFFFFF"/>

    <EditText
        android:id="@+id/edit_abonner"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        app:layout_constraintTop_toBottomOf="@id/tv_abonner"
        android:textColor="#000000"
        android:background="#FFFFFF"/>

    <Button
        android:id="@+id/bouton_envoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ajout_url"
        app:layout_constraintTop_toBottomOf="@id/edit_abonner"
        android:background="#bcc5d5"/>

</android.support.constraint.ConstraintLayout>